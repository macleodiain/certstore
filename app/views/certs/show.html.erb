<div class = "show-container">
  <div class="show-details-panel">
      <div class="details-item name"><%= @cert.name %></div>
       <div class = "details-item">Expiry <br> <%= @cert.expires %></div>
      <div class="links"><%= link_to "Edit", edit_cert_path %>
        <%= link_to "Delete", cert_path, data: { turbo_method: :delete } %>
      </div>
      <div class = "details-item">
        <%= link_to "Download", @cert.image, download: true %>
      </div>
  </div>

  <div class="show-image">
    <% if @cert.attached_file_type == "image" %>
      <%= image_tag @cert.image %>
    <% elsif @cert.attached_file_type == "pdf" %>

      <%= image_tag @cert.image.representation(resize_to_fit: [1800, 1920]) %>
    <% else %>
      <p>Supplied image is not in the correct format. Only images or pdfs are allowed.</p>
    <% end %>
  </div>
</div>